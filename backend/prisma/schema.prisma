generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?  @unique
  displayName String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  patients  Patients[]
  therapyHistories TherapyHistorys[]
  routines         Routine[]
}

model Patients {
  id            Int      @id @default(autoincrement())
  userId        Int
  firstName     String
  lastName      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  users         Users @relation(fields: [userId], references: [id])
  patientSymptoms PatientSymptoms[]
  therapyHistories  TherapyHistorys[]
}

model Symptoms {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt   DateTime?

  patientSymptoms PatientSymptoms[]
}

model PatientSymptoms {
  id         Int      @id @default(autoincrement())
  patientId  Int
  symptomsId Int
  level      Int
  armSide    String
  createdAt  DateTime @default(now())
  deletedAt   DateTime?

  patients    Patients  @relation(fields: [patientId], references: [id])
  symptoms   Symptoms @relation(fields: [symptomsId], references: [id])

  @@unique([patientId, symptomsId])
}

model TherapyTypes {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  therapyHistories TherapyHistorys[]
  routineSteps     RoutineStep[]
}

model Routine {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  user        Users         @relation(fields: [userId], references: [id])
  steps       RoutineStep[]
}

model RoutineStep {
  id            Int      @id @default(autoincrement())
  routineId     Int
  therapyTypeId Int
  order         Int
  targetCount   Int?
  targetTime    Int?
  weight        Float?

  routine       Routine      @relation(fields: [routineId], references: [id])
  therapyType   TherapyTypes @relation(fields: [therapyTypeId], references: [id])
}

model TherapyHistorys {
  id                Int      @id @default(autoincrement())
  patientId         Int
  userId            Int
  therapyTypesId    Int
  time              Int?
  score             Int?
  weight            Float?
  angle             Int?
  createdAt         DateTime @default(now())
  deletedAt         DateTime?

  users             Users @relation(fields: [userId], references: [id])
  patients          Patients @relation(fields: [patientId], references: [id])
  therapyTypes      TherapyTypes @relation(fields: [therapyTypesId], references: [id])
}
